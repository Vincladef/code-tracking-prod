// Firestore rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /u/{uid} {
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == uid;
      }
    }

    match /admins/{adminUid} {
      allow read: if false;
      allow write: if false;
    }
  }
}
