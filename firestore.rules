// Firestore rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Espace par utilisateur via lien: /u/{uid}/...
    match /u/{uid}/{document=**} {
      allow read, write: if true;   // public par UID (non authentifié)
    }

    // Tout le reste interdit (empêche d'utiliser les anciennes collections racine)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
